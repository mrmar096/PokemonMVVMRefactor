<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="net.azarquiel.pokemonappreal.presentation.pokemondetail.view.PokemonDetailActivity">
    <data>
        <variable
            name="viewmodel"
            type="net.azarquiel.pokemonappreal.presentation.pokemondetail.viewmodel.PokemonDetailViewmodel"/>
        <import type="net.azarquiel.pokemonappreal.infraestructure.utils.PokemonFormatter"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_pokemon_detail"
        android:padding="8dp"
        android:background="#ffdddddd">

        <ImageView
            android:id="@+id/ivpokemondetail"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_centerHorizontal="true"
            app:pokemonDrawableId="@{viewmodel.pokemon.id}" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{viewmodel.pokemon.name}"
            android:layout_below="@+id/ivpokemondetail"
            android:textSize="30sp"
            android:id="@+id/tvpokemondetail" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvpokemondetail"
            android:id="@+id/typetxt"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/types"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/typetxt"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            app:addChildTextView="@{PokemonFormatter.formatPokemonTypes(viewmodel.pokemon.types)}"
            android:id="@+id/lhtypesdetail">
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lhtypesdetail"
            android:id="@+id/abilitiestxt"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/abilities"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/abilitiestxt"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            app:addChildTextView="@{viewmodel.pokemon.abilities}"
            android:id="@+id/lhabilitiesdetail"/>
    </RelativeLayout>
</layout>